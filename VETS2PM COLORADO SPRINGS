    <script>
        // API Configuration
        const apiKey = ""; // API Key provided by environment

        async function callGemini(prompt) {
            const url = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`;
            
            const payload = {
                contents: [{
                    parts: [{ text: prompt }]
                }]
            };

            try {
                const response = await fetch(url, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });

                if (!response.ok) {
                    throw new Error(`API Error: ${response.status}`);
                }

                const data = await response.json();
                return data.candidates[0].content.parts[0].text;
            } catch (error) {
                console.error("Gemini API Error:", error);
                return "Error connecting to AI service. Please try again.";
            }
        }

        // Feature 1: Executive Analysis
        async function generateAnalysis() {
            const outputDiv = document.getElementById('analysis-output');
            const loader = document.getElementById('analysis-loader');
            const btnText = loader.nextElementSibling;

            // UI Loading State
            outputDiv.style.display = 'block';
            outputDiv.textContent = "";
            loader.style.display = 'inline-block';
            btnText.textContent = "Analyzing...";

            const prompt = `
                Act as a Senior Program Manager. Analyze the following business case data for the "Vets2PM Colorado Springs" program:
                - Cost: $9,500 (Breakdown: 42% Training, 26% Materials, 21% Ops, 11% Marketing)
                - Projected Benefits (Year 1): $25,000
                - ROI: 163%
                - Goal: Train veterans in PMP/Agile and place them in jobs.

                Please provide a concise Executive Summary (max 3 sentences) and 3 strategic bullet points on how to maximize this ROI further.
                Tone: Professional, persuasive, and encouraging.
            `;

            try {
                const result = await callGemini(prompt);
                outputDiv.innerText = result;
            } catch (e) {
                outputDiv.innerText = "Failed to generate analysis.";
            } finally {
                loader.style.display = 'none';
                btnText.textContent = "Regenerate Executive Brief";
            }
        }

        // Feature 2: Skill Translator
        async function translateSkill() {
            const inputVal = document.getElementById('mos-input').value;
            const outputDiv = document.getElementById('translator-output');
            const loader = document.getElementById('translator-loader');
            const btnText = loader.nextElementSibling;

            if (!inputVal.trim()) {
                outputDiv.style.display = 'block';
                outputDiv.innerText = "Please enter a military job description first.";
                return;
            }

            // UI Loading State
            outputDiv.style.display = 'block';
            outputDiv.textContent = "";
            loader.style.display = 'inline-block';
            btnText.textContent = "Translating...";

            const prompt = `
                Act as a Resume Expert for Veterans. Convert the following military job description into 3 "Project Management Professional (PMP)" aligned resume bullet points. 
                Use PMP terminology like "stakeholder management," "risk mitigation," "agile execution," and "resource allocation."
                
                Military Description: "${inputVal}"
            `;

            try {
                const result = await callGemini(prompt);
                outputDiv.innerText = result;
            } catch (e) {
                outputDiv.innerText = "Failed to translate skills.";
            } finally {
                loader.style.display = 'none';
                btnText.textContent = "Translate to Civilian PM";
            }
        }
    </script>

